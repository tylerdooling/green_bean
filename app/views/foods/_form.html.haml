= form_for @food do |f|
  -if @food.errors.any?
    #error_explanation
      %h2= "#{pluralize(@food.errors.count, "error")} prohibited this food from being saved:"
      %ul
        - @food.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :measurement_unit
    = f.text_field :measurement_unit
  .field
    = f.label :calories
    = f.number_field :calories
  .field
    = f.label :food_type
    = f.text_field :food_type
  .actions
    = f.submit 'Save'
