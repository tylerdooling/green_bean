%html
  %head
    %title GreenBean
    %meta{:name => "viewport", :content => "width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"}
    %link{:rel => "stylesheet", :href => "http://code.jquery.com/mobile/1.1.1/jquery.mobile-1.1.1.css"}
    %meta{:name => "apple-mobile-web-app-capable", :content => "yes"}
    %script{:src => "http://code.jquery.com/jquery-1.6.4.min.js"}
    %script{:src => "http://code.jquery.com/mobile/1.1.1/jquery.mobile-1.1.1.min.js"}
    = csrf_meta_tags
    = stylesheet_link_tag 'application'
    = javascript_include_tag "application"

  %body
    #main{"data-role" => "page"}
      %div{"data-role" => "header", "data-position" => "fixed"}
        %h1
          = yield :header
        = yield :top

      %div{"data-role" => "content"}

        = yield

      %div{"data-role" => "footer", "data-position" => "fixed"}
        %h1
          - if content_for? :footer
            = yield :footer
          - else
            = link_to "Home", "/", "data-icon" => "home", "data-role" =>"button", "data-iconpos" => "notext", :class => "ui-btn-left"

