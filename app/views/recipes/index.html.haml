- content_for :header do
  = link_to "", "/", "data-icon" => "home", "data-role" =>"button", "data-iconpos" => "notext", :class => "ui-btn-left"
  = @meal ? "Recipes for #{@meal.name}" : "Recipes"
  = link_to "New", new_recipe_path, "data-icon" => "plus", "data-role" =>"button", :class => "ui-btn-right"

%ul{"data-role" => "listview", "data-inset" => "true", "data-filter" => "true"}
  %li{"data-role" => "list-divider"}
    %b Choose a type
  - recipe_type_options.each do |k,v|
    %li
      = link_to v.pluralize.capitalize, filter_recipes_path(:recipe_type => v)

